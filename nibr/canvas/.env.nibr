# NIBR Biomni Canvas Configuration

# Authentication
AD_SERVER=ldaps://ad.nibr.novartis.com
AD_DOMAIN=NIBR.NOVARTIS.COM
ADMIN_PASSWORD=admin
MOCK_AD=false

# Database
DATABASE_PATH=/data/nibr_canvas.db

# Session
SESSION_SECRET=nibr-canvas-secret-key-change-in-production
SESSION_TIMEOUT_HOURS=8

# Biomni Configuration
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key
BIOMNI_DATA_PATH=/data/biomni
BIOMNI_CACHE_PATH=/data/biomni_cache

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Legacy Supabase vars (kept for compatibility but not used)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=not-used
SUPABASE_SERVICE_ROLE_KEY=not-used

# LangGraph Configuration
LANGGRAPH_API_URL=http://localhost:54367

# File Storage
UPLOAD_PATH=/data/uploads
MAX_FILE_SIZE=104857600  # 100MB

# NIBR Specific
NIBR_ENVIRONMENT=development
NIBR_ENABLE_LOGGING=true