# Docker Environment Configuration for Canvas + Biomni
# Copy this file to .env and update with your values

# ===========================================
# API KEYS
# ===========================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
GOOGLE_API_KEY=your-google-api-key
GROQ_API_KEY=your-groq-api-key

# ===========================================
# BIOMNI CONFIGURATION
# ===========================================
BIOMNI_LOCAL_DATA_PATH=../../data
BIOMNI_LOG_LEVEL=INFO
BIOMNI_SKIP_DOWNLOAD=true
BIOMNI_MAX_WORKERS=4

# ===========================================
# CANVAS CONFIGURATION
# ===========================================
# Frontend
NEXT_PUBLIC_API_URL=http://localhost:54367
NEXT_PUBLIC_AUTH_ENABLED=true
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# Backend
DATABASE_URL=sqlite:///./data/canvas.db
REDIS_URL=redis://redis:6379
ENVIRONMENT=development
LOG_LEVEL=info

# Features
USE_PERSISTENT_AGENTS=true
ENABLE_JUPYTER=true
ENABLE_MCP=false

# ===========================================
# JUPYTER CONFIGURATION
# ===========================================
JUPYTER_TOKEN=biomni-nibr
JUPYTER_ENABLE_LAB=yes
NEXT_PUBLIC_JUPYTER_URL=http://localhost:8888

# ===========================================
# DATABASE CONFIGURATION (Production)
# ===========================================
POSTGRES_USER=biomni
POSTGRES_PASSWORD=biomni-password
POSTGRES_DB=biomni_canvas

# ===========================================
# AUTHENTICATION
# ===========================================
AUTH_ENABLED=false  # Set to true for production
AD_DOMAIN=nibr.local
AD_SERVER=ldap://ad.nibr.local

# ===========================================
# DEPLOYMENT
# ===========================================
NODE_ENV=development
ENVIRONMENT=development